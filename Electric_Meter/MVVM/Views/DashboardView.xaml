<UserControl x:Class="Electric_Meter.MVVM.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="660" d:DesignWidth="1120">

    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        <Style x:Key="InfoTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColorPrimary}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <DropShadowEffect x:Key="CardDropShadow" ShadowDepth="1" Direction="270" Color="#CCCCCC" Opacity="0.5" BlurRadius="5"/>

    </UserControl.Resources>

    <Border CornerRadius="10" Background="#F0F2F5" Effect="{StaticResource CardDropShadow}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource BackgroundPrimaryColor}" CornerRadius="10" Margin="0 0 10 10" Effect="{StaticResource CardDropShadow}">
                    <StackPanel Margin="15">
                        <Grid Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ChartBarText}" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1" Text="{Binding YearText}" Style="{StaticResource InfoTextBlockStyle}" VerticalAlignment="Center" Margin="0 0 5 0"/>
                            <ComboBox Grid.Column="2" ItemsSource="{Binding LstYearBarChart}"
                                        SelectedItem="{Binding SelectedYearBarChart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Foreground="{StaticResource TextColorPrimary}"
                                        Height="32"
                                        VerticalContentAlignment="Center"
                                        Padding="10,0,10,0"
                                        HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        </Grid>
                        <lvc:CartesianChart Series="{Binding ChartBarSeriesCollection}" LegendLocation="Right" Height="200">

                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis 
                                    LabelFormatter="{Binding ChartBarFormatter}"  
                                    Foreground="{StaticResource TextColorPrimary}" 
                                    FontWeight="SemiBold"/>         
                            </lvc:CartesianChart.AxisX>

                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis 
                                    Labels="{Binding LstChartBarLabels}"                                   
                                    Foreground="{StaticResource TextColorPrimary}" 
                                    FontWeight="SemiBold" />
                            </lvc:CartesianChart.AxisY>

                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource BackgroundPrimaryColor}" CornerRadius="10" Margin="10 0 0 10" Effect="{StaticResource CardDropShadow}">

                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ChartColumnText}" Style="{StaticResource TitleTextBlockStyle}" Margin="0 0 0 10"/>
                            <TextBlock Grid.Column="1" Text="{Binding MonthText}" Style="{StaticResource InfoTextBlockStyle}" VerticalAlignment="Center" Margin="0 0 5 0"/>
                            <ComboBox Grid.Column="2"
						      ItemsSource="{Binding LstMonthColumnChart}"
						      SelectedItem="{Binding SelectedMonthColumnChart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						      Foreground="{StaticResource TextColorPrimary}"
						      Height="32"
						      VerticalContentAlignment="Center"
						      Padding="10,0,10,0"
						      HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <TextBlock Grid.Column="3" Text="{Binding YearText}" Style="{StaticResource InfoTextBlockStyle}" VerticalAlignment="Center" Margin="10 0 5 0"/>
                            <ComboBox Grid.Column="4" ItemsSource="{Binding LstYearColumnChart}"
                                      SelectedItem="{Binding SelectedYearColumnChart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Foreground="{StaticResource TextColorPrimary}"
                                      Height="32"
                                      VerticalContentAlignment="Center"
                                      Padding="10,0,10,0"
                                      HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        </Grid>
                        <lvc:CartesianChart Series="{Binding ChartColumnSeriesCollection}" LegendLocation="Top" Height="200">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding LstChartColumnLabels}" Foreground="{StaticResource TextColorPrimary}" FontWeight="SemiBold"/>
                            </lvc:CartesianChart.AxisX>
                            
                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource BackgroundPrimaryColor}" CornerRadius="10" Margin="0 0 10 0" Effect="{StaticResource CardDropShadow}">
                    <StackPanel Margin="15">
                        <Grid Margin="0 0 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ChartLineText}" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1" Text="{Binding DeviceNameText}" Style="{StaticResource InfoTextBlockStyle}" VerticalAlignment="Center" Margin="0 0 5 0"/>
                            <ComboBox Grid.Column="2" ItemsSource="{Binding LstDeviceChartLine}"
                                SelectedItem="{Binding SelectedDeviceChartLine, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Foreground="{StaticResource TextColorPrimary}"
                                DisplayMemberPath="name"
                                SelectedValuePath="devid"
                                Height="32"
                                VerticalContentAlignment="Center"
                                Padding="10,0,10,0"
                                HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        </Grid>
                        <lvc:CartesianChart Series="{Binding ChartLineSeriesCollection}" LegendLocation="Right" Height="200">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding LstChartLineLabels}" Foreground="{StaticResource TextColorPrimary}" FontWeight="SemiBold"/>
                            </lvc:CartesianChart.AxisX>
                            
                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{StaticResource BackgroundPrimaryColor}" CornerRadius="10" Margin="5 0 5 0" Effect="{StaticResource CardDropShadow}">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ChartPieText}" Style="{StaticResource TitleTextBlockStyle}" Margin="0 0 0 10"/>
                            <TextBlock Grid.Column="1" Text="{Binding MonthText}" Style="{StaticResource InfoTextBlockStyle}" VerticalAlignment="Center" Margin="0 0 5 0"/>
                            <ComboBox Grid.Column="2"
                                  ItemsSource="{Binding LstMonthPieChart}"
                                  SelectedItem="{Binding SelectedMonthPieChart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Foreground="{StaticResource TextColorPrimary}"
                                  Height="32"
                                  VerticalContentAlignment="Center"
                                  Padding="10,0,10,0"
                                  HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            <TextBlock Grid.Column="3" Text="{Binding YearText}" Style="{StaticResource InfoTextBlockStyle}" VerticalAlignment="Center" Margin="10 0 5 0"/>
                            <ComboBox Grid.Column="4" ItemsSource="{Binding LstYearPieChart}"
                                  SelectedItem="{Binding SelectedYearPieChart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Foreground="{StaticResource TextColorPrimary}"
                                  Height="32"
                                  VerticalContentAlignment="Center"
                                  Padding="10,0,10,0"
                                  HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                        </Grid>
                            <lvc:PieChart Series="{Binding ChartPieSeriesCollection}" InnerRadius="20" Hoverable="True"
                                          DataClick="PieChart_OnDataClick" LegendLocation="Right" Height="200">
                                <lvc:PieChart.DataTooltip>
                                    <lvc:DefaultTooltip/>
                                </lvc:PieChart.DataTooltip>
                            </lvc:PieChart>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </Border>
</UserControl>
