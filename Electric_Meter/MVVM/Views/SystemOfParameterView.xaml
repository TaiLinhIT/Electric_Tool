<UserControl x:Class="Electric_Meter.MVVM.Views.SystemOfParameterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Electric_Meter.MVVM.Views"
             mc:Ignorable="d" 
             Width="900"  Height="191" Background="#FFF" VerticalContentAlignment="Top">
    <Grid>
        <Grid>
            <Border Style="{StaticResource BorderContent}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Style="{StaticResource BorderContent}">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Width="120"  Text="{Binding BackupDbLocationText}" Style="{StaticResource Content Textblock}"/>
                                            <TextBox Width="120"  Text="{Binding BackupDbLocation}" Style="{StaticResource Content TextBox}" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Width="120"  Text="{Binding DatabaseNameText}" Style="{StaticResource Content Textblock}"/>
                                            <TextBox Width="120"  Text="{Binding DatabaseName}" Style="{StaticResource Content TextBox}"/>
                                        </StackPanel>
                                    </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Width="120"  Text="{Binding AccountText}" Style="{StaticResource Content Textblock}"/>
                                    <TextBox Width="120"  Text="{Binding Account}" Style="{StaticResource Content TextBox}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Width="120"  Text="{Binding PasswordText}" Style="{StaticResource Content Textblock}"/>
                                    <TextBox Width="120"  Text="{Binding Password}" Style="{StaticResource Content TextBox}"/>
                                </StackPanel>
                            </Grid>

                        </Grid>
                            </Border>
                    
                    <Border Grid.Column="1" Style="{StaticResource BorderContent}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,15,0,0">
                            <Button Content="{Binding TestText}" Command="{Binding TestConnectCommand}" Margin="0,0,0,10"/>
                            <Button Content="{Binding SaveText}" Command="{Binding SaveConnectCommand}" Margin="0,0,0,10"/>
                            <Button Content="{Binding SyncText}" Command="{Binding SyncCommand}" Margin="0,0,0,10"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
