<UserControl x:Class="Electric_Meter.MVVM.Views.ToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignWidth="1000" d:DesignHeight="700">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- ðŸ§­ Header -->
        <ui:Card Margin="16"
                 Padding="16"
                 Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Battery824"  Margin="0,0,8,0"/>
                    <TextBlock Text="Electric Meter Monitor"
                               FontSize="28"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Clock24"  Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding CurrentTime}" 
                               FontSize="18"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ui:Card>

        <!-- ðŸ“Š Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="16" HorizontalAlignment="Center" ItemWidth="220" ItemHeight="120">
                <ItemsControl ItemsSource="{Binding ElectricDataTemp}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:Card Margin="10" Padding="16" Width="220" Height="120">
                                <StackPanel HorizontalAlignment="Center">
                                    <ui:SymbolIcon Symbol="DataBarVertical24"
                                                   Width="32" Height="32"
                                                   Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Value}" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Unit}" 
                                               FontSize="14"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </ui:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
