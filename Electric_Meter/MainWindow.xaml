<Window x:Class="Electric_Meter.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:vm="clr-namespace:Electric_Meter.MVVM.ViewModels" xmlns:views="clr-namespace:Electric_Meter.MVVM.Views" xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:local="clr-namespace:Electric_Meter.Converters" mc:Ignorable="d" xmlns:models="clr-namespace:Electric_Meter.Models" Title="MainWindow" d:Height="550" Width="800" WindowState="{Binding MainWindowState, Mode=TwoWay}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BoolToPlayPauseTextConverter x:Key="BoolToPlayPauseTextConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="56*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height=" auto"/>
            <!-- Allow flexible height for content -->
        </Grid.RowDefinitions>
        <Border CornerRadius="10" Grid.Row="0" Grid.ColumnSpan="3" Background="#2ECC71" Padding="8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <!-- Helps -->
                <Button Content="Helps"
                Command="{Binding HelpCommand}"
                Margin="10,0"
                Padding="15,5"
                Background="#27AE60"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="Transparent"
                Cursor="Hand"
                Height="32"/>

                <!-- Settings -->
                <Button Content="Settings"
                Command="{Binding SettingCommand}"
                Margin="5,0"
                Padding="15,5"
                Background="#27AE60"
                Foreground="White"
                FontWeight="Bold"
                BorderBrush="Transparent"
                Cursor="Hand"
                Height="32"/>

                <!-- Language -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="Language:"
                       Foreground="White"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
                    <ComboBox Width="120"
                      Height="32"
                      SelectedValue="{Binding SelectedLanguage, Mode=TwoWay}"
                      SelectedValuePath="Tag"
                      Background="White"
                      Margin="0,0,10,0">
                        <ComboBoxItem Content="English" Tag="en"/>
                        <ComboBoxItem Content="Tiếng Việt" Tag="vi"/>
                        <ComboBoxItem Content="中文" Tag="cn"/>
                        <ComboBoxItem Content="ខ្មែរ" Tag="km"/>
                    </ComboBox>
                </StackPanel>

                <!-- Port -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Port:"
                       Foreground="White"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
                    <ComboBox Width="120"
                      Height="32"
                      ItemsSource="{Binding AvailablePorts}"
                      SelectedItem="{Binding SelectedPort}"
                      Background="White"
                      BorderBrush="#ccc"
                      Margin="0,0,10,0"/>
                </StackPanel>

                <!-- Baudrate -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Baudrate:"
                       Foreground="White"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
                    <ComboBox Width="120"
                      Height="32"
                      ItemsSource="{Binding AvailableBaudrates}"
                      SelectedItem="{Binding SelectedBaudrate}"
                      Background="White"
                      BorderBrush="#ccc"
                      Margin="0,0,10,0"/>
                </StackPanel>

                <!-- Play/Pause -->
                <Button Width="40"
                Height="40"
                Margin="10,0,10,0"
                Background="White"
                BorderBrush="Transparent"
                Cursor="Hand"
                Command="{Binding ToggleConnectionCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Image Source="pack://application:,,,/Assets/play.png" Width="20" Height="20"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Image Source="pack://application:,,,/Assets/pause.png" Width="20" Height="20"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0F7FA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>

        
        <Border Grid.Row="2" BorderThickness="0 1 0 0" BorderBrush="Gray" Grid.ColumnSpan="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Left Menu -->
                <Grid Grid.Column="0">
                    <Border BorderThickness="0 0 1 0" BorderBrush="Gray">
                        <Grid VerticalAlignment="Stretch" Margin="0,0,-1,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="500"/>
                            </Grid.RowDefinitions>
                            <!-- Header Menu -->
                            <TextBlock Grid.Row="0" Text="MENU" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Margin="10 10" Foreground="#a3a3a3" FontWeight="Bold"/>
                            <!-- Scrollable Menu Items -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Machines}" >
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0 0 0 10">
                                                <!-- Machine Button -->
                                                <Button Height="40" FontSize="15" Content="{Binding Name}" Margin="10,0">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="LightGreen" />
                                                            <Setter Property="Foreground" Value="White" />
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                            <Setter Property="BorderBrush" Value="Transparent" />
                                                            <Setter Property="Cursor" Value="Hand" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LineCode}" Value="H">
                                                                    <Setter Property="Background" Value="Red" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding LineCode}" Value="C">
                                                                    <Setter Property="Background" Value="LightBlue" />
                                                                </DataTrigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#FF88C0D0"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter Property="Background" Value="#FF5E81AC"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Button.InputBindings>
                                                        <MouseBinding Gesture="RightClick" Command="{Binding DataContext.OpenSettingCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                                                    </Button.InputBindings>
                                                </Button>
                                                <!-- Line Button -->
                                                <Button Height="35" FontSize="15" Background="Aqua" Command="{Binding DataContext.OpenToolCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="20,0,0,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Thành Hình " />
                                                        <TextBlock Text="{Binding Line}" />
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
                <!-- Center Content Area -->
                <Grid Grid.Column="1" Margin="10,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <ContentControl Grid.Row="0" Content="{Binding CurrentViewModel}" Margin="0,0,0,243">
                        <ContentControl.Resources>
                            <!-- DataTemplate for SettingViewModel -->
                            <DataTemplate DataType="{x:Type vm:SettingViewModel}">
                                <views:SettingView/>
                            </DataTemplate>
                            <!-- DataTemplate for ToolViewModel -->
                            <DataTemplate DataType="{x:Type vm:ToolViewModel}">
                                <views:ToolView/>
                            </DataTemplate>
                            <!-- DataTemplate for FactoryViewModel -->
                        </ContentControl.Resources>
                    </ContentControl>
                </Grid>
                <!-- Right Content Area -->
            </Grid>
        </Border>
    </Grid>
</Window>
